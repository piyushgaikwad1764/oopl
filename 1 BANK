#include <iostream> 
#include <string> 
using namespace std; 
class BankAccount { 
private: 
string name; 
string accountNumber; 
string dob; 
string address; 
string phone; 
string accountType; 
string ifsc; 
float balance; 
public: 
 
BankAccount() : name(""), accountNumber(""), dob(""), address(""), 
phone(""), accountType(""), ifsc(""), balance(0.0f) {} 

BankAccount(string n, string accNo, string d, string addr, string ph, 
string type, string code, float bal) 
: name(n), accountNumber(accNo), dob(d), address(addr), 
phone(ph), accountType(type), ifsc(code), balance(bal) {} 
// Copy constructor 
BankAccount(const BankAccount& other) 
: name(other.name), accountNumber(other.accountNumber), dob(other.dob), 
address(other.address), phone(other.phone), accountType(other.accountType), 
ifsc(other.ifsc), balance(other.balance) {} 
// Destructor 
~BankAccount() { 
cout << "Account " << accountNumber << " closed.\n"; 
} 
// Create new account 
void createAccount() { 
cout << "Enter Customer Name: "; 
getline(cin, name); 
cout << "Enter Account Number: "; 
getline(cin, accountNumber); 
cout << "Enter Date of Birth (DD/MM/YYYY): "; 
getline(cin, dob); 
cout << "Enter Address: "; 
getline(cin, address); 
cout << "Enter Phone Number: "; 
getline(cin, phone); 
cout << "Enter Account Type (Saving/Current): "; 
getline(cin, accountType); 
cout << "Enter IFSC Code: "; 
getline(cin, ifsc); 
cout << "Enter Initial Balance: "; 
cin >> balance; 
cin.ignore(); // Clear buffer 
} 
// Display account details 
void displayAccount() const { 
cout << "\n--- Account Details ---\n"; 
        cout << "Name: " << name << "\nAccount Number: " << accountNumber 
             << "\nDOB: " << dob << "\nAddress: " << address 
             << "\nPhone: " << phone << "\nAccount Type: " << accountType 
             << "\nIFSC Code: " << ifsc << "\nBalance: " << balance << endl; 
    } 
 
    // Deposit amount 
    void deposit(float amount) { 
        if (amount > 0) { 
            balance += amount; 
            cout << "Amount deposited successfully.\n"; 
        } else { 
            cout << "Invalid deposit amount.\n"; 
        } 
    } 
 
    // Withdraw amount 
    void withdraw(float amount) { 
        if (amount > 0 && amount <= balance) { 
            balance -= amount; 
            cout << "Amount withdrawn successfully.\n"; 
        } else { 
            cout << "Insufficient balance or invalid amount.\n"; 
        } 
    } 
 
    // View current balance 
    void viewBalance() const { 
        cout << "Current Balance: " << balance << endl; 
    } 
}; 
 
int main() { 
    BankAccount customer; 
    int choice; 
    float amount; 
 
    cout << "--- Create New Bank Account ---\n"; 
    customer.createAccount(); 
 
    do { 
        cout << "\n--- Menu ---\n"; 
        cout << "1. Display Account Details\n"; 
        cout << "2. Deposit Amount\n"; 
        cout << "3. Withdraw Amount\n"; 
        cout << "4. View Balance\n"; 
        cout << "5. Exit\n"; 
        cout << "Enter your choice: "; 
        cin >> choice; 
 
        switch (choice) { 
            case 1: 
                customer.displayAccount(); 
                break; 
            case 2: 
                cout << "Enter amount to deposit: "; 
                cin >> amount; 
                customer.deposit(amount); 
                break; 
            case 3: 
                cout << "Enter amount to withdraw: "; 
                cin >> amount; 
                customer.withdraw(amount); 
                break; 
            case 4: 
                customer.viewBalance(); 
                break; 
            case 5: 
                cout << "Exiting...\n"; 
                break; 
            default: 
                cout << "Invalid choice.\n"; 
        } 
    } while (choice != 5); 
 
    return 0; 
} 
